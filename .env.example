# =============================================================================
# CONFLUENCE CONNECTION SETTINGS
# =============================================================================

# URL базового адреса вашего Confluence Data Center (без trailing slash)
# Пример: https://confluence.example.com
CONFLUENCE_BASE_URL=https://your-confluence-domain.com

# Токен авторизации пользователя (опционально)
# Если не задан - будет использоваться анонимный доступ
# Формат для Personal Access Token: Bearer YOUR_TOKEN
# Формат для Basic Auth: Basic base64(username:password)
CONFLUENCE_AUTH_TOKEN=

# ID конкретных страниц для парсинга (опционально)
# Если не задано или пусто - парсим все доступные страницы портала
# Формат: ID1,ID2,ID3 (через запятую без пробелов)
CONFLUENCE_PAGE_ID=

# =============================================================================
# CHUNKING SETTINGS
# =============================================================================

# Размер чанка в токенах (по умолчанию: 512)
CHUNK_SIZE=512

# Размер перекрытия между чанками в токенах (по умолчанию: 0 - без перекрытия)
# Должен быть строго меньше CHUNK_SIZE
CHUNK_OVERLAP=50

# Стратегия чанкования: 'tokenizer' или 'simple'
# tokenizer - использует transformers (модель USER-bge-m3) для точного подсчёта токенов
# simple - использует regex-based приблизительный подсчёт (не требует доп. библиотек)
CHUNKING_STRATEGY=simple

# Максимальное количество уровней заголовков в иерархии для текста чанка
# Считается от наименьшего по важности (по умолчанию: 2)
# Пример: при значении 2 и иерархии h3>h2>h1 в текст попадут h3>h2
MAX_HEADING_LEVELS=2

# =============================================================================
# HTML PARSING SETTINGS
# =============================================================================

# Блочные теги, которые формируют логические блоки (через запятую)
# Эти теги при парсинге создают отдельные смысловые единицы контента
BLOCK_TAGS=p,div,blockquote,pre,ul,ol,table,h1,h2,h3,h4,h5,h6,section,article,figure,figcaption

# Теги, которые полностью исключаются из парсинга вместе со своим содержимым (через запятую)
# Контент внутри этих тегов не попадает в результат
EXCLUDED_TAGS=code,script,style,hr,nav,header,footer

# CSS-классы элементов для исключения (через запятую)
EXCLUDED_CLASSES=tableFilter,noindex
# HTML id элементов для исключения (через запятую)
EXCLUDED_IDS=breadcrumb,toc-

# Добавлять ли тег [PAGE] с названием страницы к тексту чанка (true/false, по умолчанию: true)
INCLUDE_PAGE_TAG=true

# Добавлять ли тег [SECTION] с иерархией заголовков к тексту чанка (true/false, по умолчанию: true)
INCLUDE_SECTION_TAG=true

# =============================================================================
# PERFORMANCE & LOGGING SETTINGS
# =============================================================================

# Показывать прогресс-бар (tqdm) в консоли (true/false, по умолчанию: false)
# При включении отображает интерактивный прогресс-бар вместо растущего лога
SHOW_PROGRESS_BAR=false

# Показывать замеры времени выполнения участков кода в логах (true/false, по умолчанию: false)
# Используется для профилирования и отладки производительности
SHOW_PERFORMANCE_METRICS=false

# Максимальное количество одновременных HTTP-запросов к Confluence API
MAX_CONCURRENT_REQUESTS=10

# Таймаут для HTTP-запросов в секундах
REQUEST_TIMEOUT=30

# Количество повторных попыток при ошибках HTTP-запросов (по умолчанию: 3)
MAX_RETRIES=3

# =============================================================================
# OUTPUT SETTINGS
# =============================================================================

# Директория для сохранения результирующих JSON-файлов (по умолчанию: output)
OUTPUT_DIR=output

# Включать ли информацию о блоках в результирующий JSON (true/false, по умолчанию: false)
# Если true - в JSON будет добавлен массив blocks с информацией о всех логических блоках
# Полезно для анализа структуры документа, отладки чанкования и статистики
INCLUDE_BLOCKS_IN_OUTPUT=false
